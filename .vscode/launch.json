{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "kmeans_pp - input 1",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/kmeans_pp.py",
            "console": "integratedTerminal",
            "args": [
                "3",
                "333",
                "0",
                "${workspaceFolder}/tests/class_tests/input_1_db_1.txt"
            ]
        },
        {
            "name": "kmeans_pp - input 2",
            "type": "debugpy",
